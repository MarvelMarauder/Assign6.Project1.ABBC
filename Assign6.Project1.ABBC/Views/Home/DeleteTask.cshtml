@{
    ViewData["Title"] = "Delete Task";
}

@model TaskResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete @Model.Task?</h3>

<form method="post" asp-action="DeleteTask">
    <button type="submit" class="btn-primary">Delete</button>
    <a asp-controller="Home" asp-action="ViewTasks" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="TaskId" />
</form>