@{
    ViewData["Title"] = "Add / Edit Tasks";
}

@model Assign6.Project1.ABBC.Models.TaskResponse

<h1>Add / Edit Tasks</h1>

<div>
    <form>
        <label asp-for="Task">Task: </label>
        <input asp-for="Task" /> <br />

        <label asp-for="DueDate">Due Date: </label>
        <input asp-for="DueDate" /> <br />

        <label asp-for="Quadrant">Quadrant: </label>
        <input asp-for="Quadrant" /> <br />

        <label asp-for="Category">Category: </label>
        <select asp-for="Category">
            <option value="true">Home</option>
            <option value="false">School</option>
            <option value="true">Work</option>
            <option value="false">Church</option>
        </select>

        <label asp-for="Completed">Completed?</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
    </form>
</div>