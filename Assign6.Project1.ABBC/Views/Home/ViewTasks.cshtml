@{
    ViewData["Title"] = "View Tasks";
}

@model List<TaskResponse>



<div class="container">

    <div class="row">

        <div class="col-12">
            <h1>Stephen Covey's Time Management Matrix</h1>
        </div>

    </div>

    <div class="row">

        <div class="col-3"></div>
        <div class="col-3">Urgent</div>
        <div class="col-3"></div>
        <div class="col-3">Not Urgent</div>

