        <div class="col-1">
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <h6>Important</h6>
        </div>
        <div class="col-6">
            <h3>Quad 1</h3>
            <table class="table table-bordered table-striped" width="50%">
                <thead class="font-weight-bold">
                    <tr>

                        <td>Task</td>
                        <td>Due</td>
                        <td>Completed</td>
                        <td>Category</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        @if (@x.Quadrant == 1 && x.Completed == false)
                        {
                            <tr>
                                <td>@x.Task</td>
                                <td>@x.DueDate</td>
                                <td>
                                    <form method="post" asp-controller="Home" asp-route-taskid="@x.TaskId" asp-action="CompleteTask">
                                        <button type="submit">Completed</button>
                                    </form>
                                </td>
                                <td>@x.Category.CategoryName</td>

                                <td><a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskId">Edit</a></td>
                                <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-taskid="@x.TaskId">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>

